# Server Configuration
NODE_ENV=development
PORT=3002
HOST=0.0.0.0

# PostgreSQL - Write Database
POSTGRES_WRITE_HOST=localhost
POSTGRES_WRITE_PORT=5435
POSTGRES_WRITE_USER=scmtp
POSTGRES_WRITE_PASSWORD=scmtp
POSTGRES_WRITE_DB=ticketing_write

# PostgreSQL - Read Database (CQRS Read Model)
POSTGRES_READ_HOST=localhost
POSTGRES_READ_PORT=5435
POSTGRES_READ_USER=scmtp
POSTGRES_READ_PASSWORD=scmtp
POSTGRES_READ_DB=ticketing_read

# Redis (for caching read models)
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=

# Kafka Configuration
KAFKA_BROKERS=localhost:9092
KAFKA_CLIENT_ID=ticketing-service
KAFKA_GROUP_ID=ticketing-service-group

# JWT Configuration (for token validation)
# Must match JWT_SECRET in user-service
JWT_SECRET=dev-secret-change-me
JWT_ISSUER=scmtp-user-service

# Service URLs (for Saga participation)
USER_SERVICE_URL=http://localhost:3001
ROUTE_SERVICE_URL=http://localhost:3003
PAYMENT_SERVICE_URL=http://localhost:3004

# Logging
LOG_LEVEL=debug

